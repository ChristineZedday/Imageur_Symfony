{% extends 'base.html.twig' %}

{% block title %}Section{% endblock %}

{% block content %}
    <h1>Section</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ section.id }}</td>
            </tr>
              <tr>
                <th>Article</th>
                <td>{% if section.article %}<a href="{{ path('article_show', {'id': section.article.id}) }}">{{ section.article.titre }}</a>{% else %}<a href="{{ path('home_page_show', {'id': section.homePage.id}) }}">{{ section.homePage.titre }}</a>{% endif %}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ section.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ section.contenu }}</td>
            </tr>
             <tr>
                <th>Rang dans l'article</th>
                <td>{{ section.rang }}</td>
            </tr>
             <tr>
                <th>Carrousel?</th>
                 <td>{% if (section.slider) %}<a href="{{ path('slider_show', {'id': section.slider.id}) }}">{{ section.slider.nom }}</a> {% else %} Pas de carrousel {% endif %}</td>
            </tr>
        </tbody>
    </table>
<p>
    <a href="{{ path('section_index') }}">Retour à la liste</a></p>

  <p>  <a href="{{ path('section_edit', {'id': section.id}) }}">Modifier</a></p>

  <p>    <a href="{{ path('section_genere', {'id': section.id}) }}">Générer la section</a></p>
   <p>Si c'est une nouvelle section, <a href="{{ path('article_genere', {'id': section.article.id}) }}">re-générer l'article pour qu'il puisse l'inclure!</a></p>

    {{ include('section/_delete_form.html.twig') }}

  
   
{% endblock %}
