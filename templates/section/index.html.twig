{% extends 'base.html.twig' %}

{% block title %}Section index{% endblock %}

{% block content %}
    <h1>Index des sections d'article</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Article</th>
                <th>Titre</th>
                <th>Rang dans l'article</th>
                 <th>Carrousel?</th>
                  <th>Image unique?</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                 <td> {% if section.article %}{{ section.article.titre }} {% else %} {{ section.homePage.titre }} {% endif %}</td>
                <td>{{ section.titre }}</td>
                 <td>{{ section.rang }}</td>
                   <td>{% if (section.slider) %}<a href="{{ path('slider_show',{'id': section.slider.id}) }}">{{ section.slider.nom }}</a> {% else %} Pas de carrousel {% endif %}</td>
                   <td>{% if (section.image) %}<a href="{{ path('image_show',{'id': section.image.id}) }}">{{ section.image.nom }}</a> {% else %} Pas d'image isolée {% endif %}</td>
                <td>
                    <a href="{{ path('section_show', {'id': section.id}) }}">{{ include('./_showicone.html.twig')}}</a>
                    <a href="{{ path('section_edit', {'id': section.id}) }}">{{ include('./_editicone.html.twig')}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de sections enregistrées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  <p class="supertitre">  <a href="{{ path('section_new') }}">Ajouter une section</a></p>
   
{% endblock %}
