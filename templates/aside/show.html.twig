{% extends 'base.html.twig' %}

{% block title %}Aside{% endblock %}

{% block content %}
    <h1>A-côté</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ aside.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ aside.titre }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ aside.nom }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ aside.contenu }}</td>
