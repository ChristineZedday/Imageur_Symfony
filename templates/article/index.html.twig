{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block content %}

    <h1>Article index</h1>
    <p><a href="{{ path('article_new') }}">Ajouter un article</a></p>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Rubrique</th>
                <th>Description</th>
                <th>Mots clés</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.nom }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.auteur }}</td>
                <td>{% if (article.rubrique) %}<a href="{{ path('rubrique_show', {'id': article.rubrique.id}) }}">{{ article.rubrique.nom }}</a>{% endif %}</td>
               <td>{% if (article.description) %}{{ article.description }}{% endif %}</td>
               <td>{% if (article.keywords) %}{{ article.keywords }}{% endif %}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}"> {{ include('./_showicone.html.twig')}}</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">{{ include('./_editicone.html.twig')}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'articles enregistrés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    

       {{ include('./_crediticones.html.twig')}}
     
{% endblock %}
